@using Advisor.Models
@{
    ViewBag.Title = "Study Program";
}

<h2><i class="fas fa-book"></i>  @ViewBag.StudyProgram.Title</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Description</h3>
            <div class="about-section">
                <p>
                    @ViewBag.StudyProgram.Description
                </p>
            </div>
            <a class="compare-link" href="@Url.RouteUrl("compare")"><h4>Compare with other study programs<i class="fas fa-arrow-right"></i></h4></a>
        </div>
        <div class="col-sm-6">
            <h3>Statistics</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Overall rating</th>
                        <td>@ViewBag.StatsData.OveralRating/10</td>
                    </tr>
                    <tr>
                        <th>Level of satisfaction</th>
                        <td>@ViewBag.StatsData.Satisfaction/10</td>
                    </tr>
                    <tr>
                        <th>Average graduate salary</th>
                        <td>@ViewBag.StatsData.AverageSalary€</td>
                    </tr>
                    <tr>
                        <th>Percentage of graduates working in relevant industry</th>
                        <td>@ViewBag.StatsData.RelevantIndustryPercentage%</td>
                    </tr>
                </tbody>
            </table>
            <a class="compare-link" href="@Url.RouteUrl("review_page")"><h4>Leave a review<i class="fas fa-arrow-right"></i></h4></a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h3>Reviews (@ViewBag.StatsData.ReviewCount)</h3>
            <div class="review-list">
                @foreach (Review review in ViewBag.StudyProgram.Reviews)
                {
                    <div class="review-container">
                        <div class="row">
                            <i class="fas fa-user-circle fa-5x col-md-2"></i>
                            <div class="review-details col-sm-10">
                                <h5>@review.User.Name</h5>
                                <i class="fas fa-star"></i> Rating @review.OveralRating/10
                                <p>@review.Text</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm-6">
            <h3>Courses (@ViewBag.StudyProgram.Courses.Count)</h3>
            <div class="flex-wrap">
                @foreach (Course course in ViewBag.StudyProgram.Courses)
                {
                    <div class="course-container card">
                        <a href="@Url.RouteUrl("course_page", new { id = course.Id })">
                            <h3>@course.Title</h3>
                        </a>
                        <div class="d-flex">
                            @if (course.Reviews.Count > 0)
                            {
                                <div class="d-flex mr-5">
                                    <p class="mr-5">
                                        <i class="fas fa-star"></i>
                                    </p>
                                    <p class="mr-5">Overall @Math.Round(course.Reviews.Average(r => r.OveralRating), 2).ToString()</p>
                                </div>
                            }
                            <div class="d-flex mr-5">
                                <p class="mr-5">
                                    <i class="fas fa-book-reader"></i>
                                </p>
                                <p class="mr-5">@course.UploadedFiles.Count files</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
