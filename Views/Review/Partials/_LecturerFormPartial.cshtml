@using Advisor.Models

<div class="container">
    <div class="row">
        <div class="review-container">
            <div class="col-sm-6 mt-20">
                <!--University select-->
                <label for="university-select-lecturer">Select university</label>
                <select class="selectpicker form-control" id="university-select-lecturer">
                    <option value="" selected disabled hidden>Please select</option>
                    @foreach (University uni in ViewBag.Universities)
                    {
                        <option>@uni.Title</option>
                    }
                </select>
                <!--Faculty select-->
                <div class="mt-20">
                    <label for="faculty-select-lecturer">Select faculty</label>
                    <select class="selectpicker form-control" id="faculty-select-lecturer">
                        <option value="" selected disabled hidden>Please select</option>
                        <!--TODO: add real options-->
                        @for (int i = 0; i < 5; i++)
                        {
                            <option>Faculty @i</option>
                        }
                    </select>
                </div>
                <!--Lecturer select-->
                <div class="mt-20">
                    <label for="lecturer-select">Select lecturer</label>
                    <select class="selectpicker form-control" id="lecturer-select">
                        <option value="" selected disabled hidden>Please select</option>
                        <!--TODO: add real options-->
                        @for (int i = 0; i < 5; i++)
                        {
                            <option>Lecturer @i</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-6 mt-20">
                <!--Overall rating-->
                <label for="stars">Overall rating</label>
                <div class="stars">
                    @for (int i = 0; i < 10; i++)
                    {
                        <span onclick="starmark(this)" id="@i+overallLecturer" class="fa fa-star "></span>
                    }
                </div>
                <!--Personality-->
                <label class="mt-20" for="stars">Personality</label>
                <div class="stars">
                    @for (int i = 0; i < 10; i++)
                    {
                        <span onclick="starmark(this)" id="@i+personalityLecturer" class="fa fa-star "></span>
                    }
                </div>
                <!--Competence-->
                <label class="mt-20" for="stars">Competence</label>
                <div class="stars">
                    @for (int i = 0; i < 10; i++)
                    {
                        <span onclick="starmark(this)" id="@i+CompetenceLecturer" class="fa fa-star "></span>
                    }
                </div>
                <!--Delivery-->
                <label class="mt-20" for="stars">Delivery</label>
                <div class="stars">
                    @for (int i = 0; i < 10; i++)
                    {
                        <span onclick="starmark(this)" id="@i+deliveryLecturer" class="fa fa-star "></span>
                    }
                </div>
                <!--Interesting ...-->
                <div class="slidecontainer mt-20">
                    <span class="slider-span">Uninteresting</span>
                    <span class="slider-span-right" style="float:right">Interesting</span>
                    <input type="range" min="1" max="100" class="slider">
                </div>
                <!--Strictness-->
                <div class="slidecontainer mt-20">
                    <span class="slider-span">Lenient</span>
                    <span class="slider-span-right" style="float:right">Strict</span>
                    <input type="range" min="1" max="100" class="slider">
                </div>
            </div>
            <div class="col-sm-12 mt-20">
                <!--Review textarea-->
                <textarea class="review-textarea mt-20" id="review-text-course" placeholder="Enter your review"></textarea>
                <!--Submit button-->
                <button type="button" class="btn btn-info sub" id="course-submit-btn">Submit</button>
            </div>
        </div>
    </div>
</div>

