@using Advisor.Models

<form>
    <div class="col-md-6 mt-20">
        <div class="form-group">
            <label for="university">Select university</label>
            <select class="form-control m-w-unset" id="university">
                <option selected disabled hidden>University</option>
                @foreach (University uni in ViewBag.Universities)
                {
                    <option value="@uni.Id">@uni.Title</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="program">Select study program</label>
            <select class="form-control m-w-unset" id="program">
                <option selected disabled hidden>Study program</option>
                @for (int i = 0; i < 5; i++)
                {
                    <option value="@ViewBag.StudyPrograms">Study program @i</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="startyear-select">Which university year did you start your career?</label>
            <select class="form-control m-w-unset" id="startyear-select">
                <option selected disabled hidden>Choose year</option>
                <option value="1">First</option>
                <option value="2">Second</option>
                <option value="3">Third</option>
                <option value="4">Fourth</option>
            </select>
        </div>

        <div class="form-group">
            <label for="salary">Salary</label>
            <input type="text" class="form-control m-w-unset" id="salary" placeholder="My current salary is...">
        </div>

        <div class="form-group mt-20">
            <input id="relevant" type="checkbox" value="1" />
            <label for="relevant">I am working in a relevant industry</label>
        </div>
    </div>
    <div class="col-md-6 mt-20">
        <div class="form-group">
            <label for="stars">Overall rating</label>
            <div class="stars">
                @for (int i = 0; i < 10; i++)
                {
                    <span onclick="starmark(this)" id="@i+overallStudyProgram" class="fa fa-star "></span>
                }
            </div>
        </div>

        <div class="form-group">
            <label for="stars">Difficulty</label>
            <div class="stars">
                @for (int i = 0; i < 10; i++)
                {
                    <span onclick="starmark(this)" id="@i+difficultyStudyProgram" class="fa fa-star"></span>
                }
            </div>
        </div>

        <div class="form-group mt-20">
            <label for="stars">Satisfaction level</label>
            <div class="stars">
                @for (int i = 0; i < 10; i++)
                {
                    <span onclick="starmark(this)" id="@i+satisfactionStudyProgram" class="fa fa-star "></span>
                }
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <textarea class="form-control review-textarea w-100" id="review-text" placeholder="Enter your review..."></textarea>
        <button type="submit" class="btn btn-primary mt-20 w-100">Submit</button>
    </div>
</form>
