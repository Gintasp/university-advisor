@using Advisor.Models
@{
    ViewBag.Title = "_StudyProgramFormPartial";
}

<div class="admin-container mt-20">
    <div class="row">
        <div class="col-sm-4 form-group">
            <label for="adminStudyPrograms-university">Select university</label>
            <select class="university-select form-control" id="adminStudyPrograms-university">
                <option selected disabled hidden>University</option>
                @foreach (University uni in ViewBag.Universities)
                {
                    <option value="@uni.Id">@uni.Title</option>
                }
            </select>
        </div>
        <div class="col-sm-4 form-group">
            <label for="adminStudyPrograms-faculty">Select faculty</label>
            <select class="faculty-select form-control" id="adminStudyPrograms-faculty">
                <option selected disabled hidden>Faculty</option>
                @for (int i = 0; i < 20; i++)
                {
                    <option>Faculty</option>
                }
            </select>
        </div>
        <div class="col-sm-12">
            <h2>Study Programs</h2>
            <div class="list">
                <table class="table">
                    <tbody>
                        @for (int i = 0; i < 20; i++)
                        {
                            <tr>
                                <th scope="row" class="admin-listItem-wider">Study program</th>
                                <td class="admin-icons-wider">
                                    <span data-target="#editStudyProgramModal" data-toggle="modal"><i class="fas fa-edit"></i></span>
                                    <span><i class="fas fa-trash-alt"></i></span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <button class="btn btn-primary mt-20" data-target="#addStudyProgramModal" data-toggle="modal">Add Study Program</button>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" id="addStudyProgramModal"
            data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        &times;
                    </button>
                    <h4 class="modal-title">Add Study Program</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="addStudyProgram-university">Select university</label>
                            <select class="form-control" id="addStudyProgram-university">
                                <option selected disabled hidden>University</option>
                                @foreach (University uni in ViewBag.Universities)
                                {
                                    <option value="@uni.Id">@uni.Title</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="addStudyProgram-faculty">Select faculty</label>
                            <select class="form-control" id="addStudyProgram-faculty">
                                <option selected disabled hidden>Faculty</option>
                                @for (int i = 0; i < 20; i++)
                                {
                                    <option>Faculty</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="studyProgramTitle">Study program title</label>
                            <input class="form-control" placeholder="Enter study program title"
                                   type="text" id="studyProgramTitle" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="editStudyProgramModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">Edit Study Program</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="editStudyProgramTitle">Study Program Title</label>
                        <input class="form-control" type="text" id="editStudyProgramTitle" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

