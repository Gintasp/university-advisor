@using Advisor.Models
@{
    ViewBag.Title = "Review";
}

    <html>
    <body>
        <h2>Leave a review</h2>
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#studyProgramTab" data-toggle="tab">Study Program</a>
            </li>
            <li>
                <a href="#courseTab" data-toggle="tab">Course</a>
            </li>
            <li>
                <a href="#lecturerTab" data-toggle="tab">Lecturer</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="studyProgramTab" class="tab-pane active">
                <div class="container">
                    <div class="form">
                        <div class="review-container">
                            <div class="row">
                                <div class="col-sm-6 mt-20">
                                    <form action="#">
                                        <div class="form-group">
                                            <!--University select-->
                                            <label for="university-select">Select university</label>
                                            <select class="selectpicker form-control" id="university-select" onchange="getSelectValue();">
                                                <option value="" selected disabled hidden>Please select</option>
                                                @foreach (University uni in ViewBag.Universities)
                                                {
                                                    <option>@uni.Title</option>
                                                }
                                            </select>
                                            <!--check that function works-->
                                            <p id="demo"></p>
                                            <!--Faculty select-->
                                            <div class="mt-20">
                                                <label for="faculty-select">Select faculty</label>
                                                <select class="selectpicker form-control" id="faculty-select">
                                                    <option value="" selected disabled hidden>Please select</option>
                                                    <!--TODO: add real options-->
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <option>Faculty @i</option>
                                                    }
                                                </select>
                                            </div>
                                            <!--Study program select-->
                                            <div class="mt-20">
                                                <label for="studyprogram-select">Select study program</label>
                                                <select class="selectpicker form-control" id="studyprogram-select">
                                                    <option value="" selected disabled hidden>Please select</option>
                                                    <!--TODO: add real options-->
                                                    @for(int i=0; i < 5; i++)
                                                    {
                                                        <option>Study program @i</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-sm-6 mt-20">
                                    <!--Overall rating-->
                                    <div class="form-group">
                                        <label for="stars">Overall rating</label>
                                        <div class="stars">
                                            @for (int i = 0; i < 10; i++)
                                            {
                                                <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+overallStudyProgram" class="fa fa-star "></span>
                                            }

                                        </div>
                                    </div>
                                    <!--Difficulty-->
                                    <div class="form-group">
                                        <label for="stars">Difficulty</label>
                                        <div class="stars">
                                            @for (int i = 0; i < 10; i++)
                                            {
                                                <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+difficultyStudyProgram" class="fa fa-star "></span>
                                            }
                                        </div>
                                        <!--Satisfaction-->
                                        <div class="mt-20">
                                            <label for="stars">Satisfaction level</label>
                                            <div class="stars">
                                                @for (int i = 0; i < 10; i++)
                                                {
                                                    <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+satisfactionStudyProgram" class="fa fa-star "></span>
                                                }

                                            </div>
                                        </div>
                                        <!--Relevant industry-->
                                        <div class="check mt-20">
                                            <input type="checkbox" value="" />  I am working in a relevant industry
                                        </div>

                                        <!--Select start year-->
                                        <div class="mt-20">
                                            <label for="startyear-select">Select your start year</label>
                                            <select class="selectpicker form-control" id="startyear-select">
                                                <option value="" selected disabled hidden>Please select</option>
                                                <option>First</option>
                                                <option>Second</option>
                                                <option>Third</option>
                                                <option>Fourth</option>
                                            </select>
                                        </div>
                                        <!--Salary-->
                                        <div class="mt-20">
                                            <label for="salary">Salary</label>
                                            <input type="text" class="form-control" id="salary">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="review-container">
                        <div class="row">
                            <div class="col-sm-12 mt-20">
                                <!--Review textarea-->
                                <textarea class="review-textarea" id="review-text" placeholder="Enter your review"></textarea>
                                <!--Submit button-->
                                <button onclick="result()" type="button" class="btn btn-info sub" id="submit-btn">Submit</button>
                            </div>
                        </div>
                    </div>
                 </div>       
            </div>
        </div>
            <!--COURSE TAB-->
            <div id="courseTab" class="tab-pane">
                <div class="container">
                    <div class="row">
                        <div class="review-container">
                            <div class="col-sm-6 mt-20">
                                <!--University select-->
                                <label for="university-select-course">Select university</label>
                                <select class="selectpicker form-control" id="university-select-course">
                                    <option value="" selected disabled hidden>Please select</option>
                                    @foreach (University uni in ViewBag.Universities)
                                    {
                                        <option>@uni.Title</option>
                                    }
                                </select>
                                <!--Faculty select-->
                                <div class="mt-20">
                                    <label for="faculty-select-course">Select faculty</label>
                                    <select class="selectpicker form-control" id="faculty-select-course">
                                        <option value="" selected disabled hidden>Please select</option>
                                        <!--TODO: add real options-->
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <option>Faculty @i</option>
                                        }
                                    </select>
                                </div>
                                <!--Study Program select-->
                                <div class="mt-20">
                                    <label for="studyprogram-select-course">Select study program</label>
                                    <select class="selectpicker form-control" id="studyprogram-select-course">
                                        <option value="" selected disabled hidden>Please select</option>
                                        <!--TODO: add real options-->
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <option>Study program @i</option>
                                        }
                                    </select>
                                </div>
                                <!--Course select-->
                                <div class="mt-20">
                                    <label for="course-select">Select course</label>
                                    <select class="selectpicker form-control" id="course-select">
                                        <option value="" selected disabled hidden>Please select</option>
                                        <!--TODO: add real options-->
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <option>Course @i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 mt-20">
                                <!--Overall rating-->
                                <label for="stars">Overall rating</label>
                                <div class="stars">
                                    @for (int i = 0; i < 10; i++)
                                    {
                                        <span onclick="starmark(this)" id="@i+overallCourse" class="fa fa-star "></span>
                                    }
                                </div>
                                <!--Satisfaction-->
                                <div class="mt-20">
                                    <label for="stars">Satisfaction level</label>
                                    <div class="stars">
                                        @for (int i = 0; i < 10; i++)
                                        {
                                            <span onclick="starmark(this)" id="@i+satisfactionCourse" class="fa fa-star "></span>
                                        }
                                    </div>
                                </div>
                                <!--Usefulness-->
                                <div class="mt-20">
                                    <label for="stars">Usefulness</label>
                                    <div class="stars">
                                        @for (int i = 0; i < 10; i++)
                                        {
                                            <span onclick="starmark(this)" id="@i+usefulnessCourse" class="fa fa-star "></span>
                                        }
                                    </div>
                                </div>
                                <!--Interesting-->
                                <div class="mt-20">
                                    <div class="slidecontainer">
                                        <span>Uninteresting</span>
                                        <span style="float:right; padding-bottom:5px;">Interesting</span>
                                        <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                    </div>
                                </div>

                                <!--Theory-->
                                <div class="mt-20">
                                    <div class="slidecontainer">
                                        <span>Theory</span>
                                        <span style="float:right; padding-bottom:5px;">Practice</span>
                                        <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                    </div>
                                </div>
                                <!--Difficulty-->
                                <div class="mt-20">
                                    <div class="slidecontainer">
                                        <span>Easy</span>
                                        <span style="float:right; padding-bottom:5px;">Difficult</span>
                                        <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
                                    </div>
                                </div>


                            </div>
                            <div class="col-sm-12 mt-20">
                                <!--Review textarea-->
                                <textarea class="review-textarea" id="review-text-course" placeholder="Enter your review"></textarea>
                                <div class="mt-20">
                                    <!--Submit button-->
                                    <button type="button" class="btn btn-info sub" id="course-submit-btn">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--LECTURER TAB-->
            <div id="lecturerTab" class="tab-pane">
                            <h3>Lecturer</h3>
            </div>
        </div>

</body>
    </html>
    <script>
        var count;
        function starmark(item) {
            count = item.id[0];
            sessionStorage.starRating = +count+1;
            var subid = item.id.substring(1);
            for (var i = 0; i < 10; i++) {
                if (i < Number(count) + 1) {
                    document.getElementById(i + subid).style.color = "orange";
                }
                else {
                    document.getElementById(i + subid).style.color = "black";
                }
                
            }
            
        }
        function result() {
            //Rating : Count
            //Review : Comment(id)
            alert("Rating : " + count + "\nReview : " + document.getElementById("review-text").value);
        }
        function getSelectValue() {
            var selectedValue = document.getElementById("university-select").value;
            document.getElementById("demo").innerHTML = selectedValue;
        }
    </script>

