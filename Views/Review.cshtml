@using Advisor.Models
@{
    ViewBag.Title = "Review";
}

    <html>
    <body>
        <h2>Leave a review</h2>
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#studyProgramTab" data-toggle="tab">Study Program</a>
            </li>
            <li>
                <a href="#courseTab" data-toggle="tab">Course</a>
            </li>
            <li>
                <a href="#lecturerTab" data-toggle="tab">Lecturer</a>
            </li>
        </ul>

        <div class="tab-content">
            <div id="studyProgramTab" class="tab-pane active">
                <div class="container">
                    <div class="form">
                        <div class="review-container">
                            <div class="row">
                                <div class="col-sm-6 mt-20">
                                    <form action="#">
                                        <div class="form-group">
                                            <label for="university-select">Select university</label>
                                            <select class="selectpicker form-control" id="university-select" name="sellist1" onchange="getSelectValue();">
                                                <option value="" selected disabled hidden>Please select</option>
                                                @foreach (University uni in ViewBag.Universities)
                                                {
                                                    <option>@uni.Title</option>
                                                }
                                            </select>
                                            <p id="demo"></p>
                                            <div class="mt-20">
                                                <label for="faculty-select">Select faculty</label>
                                                <select class="selectpicker form-control" id="faculty-select" name="sellist1">
                                                    <option value="" selected disabled hidden>Please select</option>
                                                    <!--TODO: add real options-->
                                                    <option>Faculty</option>
                                                    <option>Faculty</option>
                                                    <option>Faculty</option>
                                                </select>
                                            </div>
                                            <div class="mt-20">
                                                <label for="studyprogram-select">Select faculty</label>
                                                <select class="selectpicker form-control" id="studyprogram-select" name="sellist1">
                                                    <option value="" selected disabled hidden>Please select</option>
                                                    <!--TODO: add real options-->
                                                    <option>Study Program</option>
                                                    <option>Study Program</option>
                                                    <option>Study Program</option>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-sm-6 mt-20">
                                    <!--Overall rating-->
                                    <div class="form-group">
                                        <label for="stars">Overall rating</label>
                                        <div class="stars">
                                            @for (int i = 0; i < 10; i++)
                                            {
                                                <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+overall" class="fa fa-star "></span>
                                            }

                                        </div>
                                    </div>
                                    <!--Difficulty-->
                                    <div class="form-group">
                                        <label for="stars">Difficulty</label>
                                        <div class="stars">
                                            @for (int i = 0; i < 10; i++)
                                            {
                                                <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+difficulty" class="fa fa-star "></span>
                                            }
                                        </div>
                                        <!--Satisfaction-->
                                        <div class="mt-20">
                                            <label for="stars">Satisfaction level</label>
                                            <div class="stars">
                                                @for (int i = 0; i < 10; i++)
                                                {
                                                    <span onmouseover="starmark(this)" onclick="starmark(this)" id="@i+satisfaction" class="fa fa-star "></span>
                                                }

                                            </div>
                                        </div>
                                        <!--Relevant industry-->
                                        <div class="check mt-20">
                                            <input type="checkbox" value="" />  I am working in a relevant industry
                                        </div>

                                        <!--Select start year-->
                                        <div class="mt-20">
                                            <label for="startyear-select">Select your start year</label>
                                            <select class="selectpicker form-control" id="startyear-select">
                                                <option value="" selected disabled hidden>Please select</option>
                                                <option>First</option>
                                                <option>Second</option>
                                                <option>Third</option>
                                                <option>Fourth</option>
                                            </select>
                                        </div>
                                        <!--Salary-->
                                        <div class="mt-20">
                                            <label for="salary">Salary</label>
                                            <input type="text" class="form-control" id="salary">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="review-container">
                        <div class="row">
                            <div class="col-sm-12 mt-20">
                                <!--Review textarea-->
                                <textarea style="margin-top:5px;" class="form-control" rows="3" id="comment" placeholder="Enter your review"></textarea>
                                <!--Submit button-->
                                <button onclick="result()" type="button" class="btn btn-info" id="submit-btn">Submit</button>
                            </div>
                        </div>
                    </div>
                 </div>       
            </div>
        </div>
            <div id="courseTab" class="tab-pane">
                <h3>Course</h3>
                <input type="checkbox" value="" />
            </div>
            <div id="lecturerTab" class="tab-pane">
                            <h3>Lecturer</h3>
            </div>
        </div>

</body>
    </html>
    <script>
        var count;
        function starmark(item) {
            count = item.id[0];
            sessionStorage.starRating = +count+1;
            var subid = item.id.substring(1);
            for (var i = 0; i < 10; i++) {
                if (i < Number(count) + 1) {
                    document.getElementById(i + subid).style.color = "orange";
                }
                else {
                    document.getElementById(i + subid).style.color = "black";
                }
                
            }
            
        }
        function result() {
            //Rating : Count
            //Review : Comment(id)
            alert("Rating : " + count + "\nReview : " + document.getElementById("comment").value);
        }
        function getSelectValue() {
            var selectedValue = document.getElementById("university-select").value;
            document.getElementById("demo").innerHTML = selectedValue;
        }
    </script>

